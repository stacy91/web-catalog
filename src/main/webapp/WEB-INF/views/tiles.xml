<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">

<tiles-definitions>

	<definition name="management" template="/WEB-INF/views/shared/managementLayout.jsp">
		<put-attribute name="pageTitle" value="Dashboard"></put-attribute>
		<put-attribute name="wrapperTitle" value="Overview"></put-attribute>
		<put-attribute name="left" value=""/>
		<put-attribute name="body" value=""/>
		<put-attribute name="contextPath" value="${pageContext.servletContext.contextPath}"></put-attribute>
	</definition>
	
	
	<!-- Admin Pages -->
	
	<definition name="adminIndex" extends="management" >
		<put-attribute name="left" value="/WEB-INF/views/shared/leftAdmin.jsp"/>
		<put-attribute name="body" value="/WEB-INF/views/management/admin/index.jsp"/>
	</definition>
	
	<definition name="adminErrors/un" extends="management" >
		<put-attribute name="pageTitle" value="Unique name error"/>
		<put-attribute name="wrapperTitle" value="Unique name error"/>
		<put-attribute name="left" value="/WEB-INF/views/shared/leftAdmin.jsp"/>
		<put-attribute name="body" value="/WEB-INF/views/errors/UniqueName.jsp"/>
	</definition>
	
		<!-- Brands -->
	
	<definition name="adminBrands" extends="adminIndex">
		<put-attribute name="pageTitle" value="Brands Management"/>
		<put-attribute name="wrapperTitle" value="All Brands"/>
		<put-attribute name="body" value="/WEB-INF/views/management/admin/brands/index.jsp"/>
	</definition>
	<definition name="adminBrands/add" extends="adminBrands">
		<put-attribute name="wrapperTitle" value="Add Brand"/>
		<put-attribute name="body" value="/WEB-INF/views/management/admin/brands/addBrand.jsp"/>
	</definition>
	<definition name="adminBrands/update" extends="adminBrands">
		<put-attribute name="wrapperTitle" value="Update Brand"/>
		<put-attribute name="body" value="/WEB-INF/views/management/admin/brands/updateBrand.jsp"/>
	</definition>
	
		<!-- End Brands -->
	
	
		<!-- Devices -->
	
	<definition name="adminDevices" extends="adminIndex">
		<put-attribute name="pageTitle" value="Devices Management"/>
		<put-attribute name="wrapperTitle" value="All Devices"/>
		<put-attribute name="body" value="/WEB-INF/views/management/admin/devices/index.jsp"/>
	</definition>
	<definition name="adminDevices/add" extends="adminDevices">
		<put-attribute name="pageTitle" value="Devices Management"/>
		<put-attribute name="wrapperTitle" value="Add Device"/>
		<put-attribute name="body" value="/WEB-INF/views/management/admin/devices/addDevice.jsp"/>
	</definition>
	<definition name="adminDevices/update" extends="adminDevices">
		<put-attribute name="pageTitle" value="Devices Management"/>
		<put-attribute name="wrapperTitle" value="Update Device"/>
		<put-attribute name="body" value="/WEB-INF/views/management/admin/devices/updateDevice.jsp"/>
	</definition>
	
		<!-- End Devices -->
		
	<!-- End Admin Pages -->
	
	<definition name="home" template="/WEB-INF/views/home.jsp"/>
	
</tiles-definitions>