<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">

<tiles-definitions>

	<definition name="management" template="/WEB-INF/views/shared/managementLayout.jsp">
		<put-attribute name="pageTitle" value="Dashboard"></put-attribute>
		<put-attribute name="wrapperTitle" value="Overview"></put-attribute>
		<put-attribute name="left" value=""/>
		<put-attribute name="body" value=""/>
		<put-attribute name="contextPath" value="${pageContext.servletContext.contextPath}"></put-attribute>
	</definition>
	
	
	<!-- Admin Pages -->
	
	<definition name="adminIndex" extends="management" >
		<put-attribute name="left" value="/WEB-INF/views/shared/leftAdmin.jsp"/>
		<put-attribute name="body" value="/WEB-INF/views/management/admin/index.jsp"/>
	</definition>
	
	<definition name="adminBrands" extends="adminIndex">
		<put-attribute name="pageTitle" value="Brands Management"></put-attribute>
		<put-attribute name="wrapperTitle" value="All Brands"></put-attribute>
		<put-attribute name="body" value="/WEB-INF/views/management/admin/brands.jsp"/>
	</definition>
	
	<definition name="adminBrands/add" extends="adminIndex">
	<put-attribute name="wrapperTitle" value="Add Brand"></put-attribute>
		<put-attribute name="body" value="/WEB-INF/views/management/admin/addBrand.jsp"/>
	</definition>
		
	<!-- End Admin Pages -->
	
	
	
	<definition name="home" template="/WEB-INF/views/home.jsp"/>
	
</tiles-definitions>